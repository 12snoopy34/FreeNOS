CC        = 'mipsel-linux-gnu-gcc'
AS        = 'mipsel-linux-gnu-gcc'
LD        = 'mipsel-linux-gnu-gcc'
CFLAGS    = [ '-Wa,-xgot', '-Wall', '-Werror', '-nostdinc', '-fno-stack-protector' ]
ASFLAGS   = [ '-Wa,-xgot', '-Wall', '-Werror', '-nostdinc' ]
LINKFLAGS = [ '-Wa,-xgot', '-Wall', '-Werror', '-static',
              '-nostdlib', '-nostartfiles', '-nodefaultlibs' ]

